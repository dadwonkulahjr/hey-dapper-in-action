@page
@model HeyDapper.WebUI.Pages.Company.UpsertModel
@{
    if (Model.CompanyObj.CompanyId == 0)
    {
        //Create Request
        ViewData["Title"] = "Create new record";
    }
    else
    {
        //Update Request
        ViewData["Title"] = "Update record";
    }

}


<div class="containter border shadow" style="padding:20px;margin-bottom:12%;">
    <div class="row">
        <div class="col-9">
            @if (Model.CompanyObj.CompanyId == 0)
            {
                <h5><i class="fas fa-plus-circle"></i>&nbsp;Create new record</h5>
            }
            else
            {
                <h5><i class="far fa-edit"></i>&nbsp;Update record</h5>
            }
        </div>
    </div>
    <hr />
    <form method="post" class="mb-5">
        @if (Model.CompanyObj.CompanyId != 0)
        {
            <input asp-for="CompanyObj.CompanyId" hidden="hidden" />
        }
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="CompanyObj.Name" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="CompanyObj.Name" class="form-control" placeholder="Enter the name..." />
                <span asp-validation-for="CompanyObj.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mt-1">
            <div class="col-3">
                <label asp-for="CompanyObj.Address" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="CompanyObj.Address" class="form-control" placeholder="Enter the address..." />
                <span asp-validation-for="CompanyObj.Address" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mt-1">
            <div class="col-3">
                <label asp-for="CompanyObj.City" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="CompanyObj.City" class="form-control" placeholder="Enter the city..." />
                <span asp-validation-for="CompanyObj.City" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row mt-1">
            <div class="col-3">
                <label asp-for="CompanyObj.PostalCode" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="CompanyObj.PostalCode" class="form-control" placeholder="Enter the postal code..." />
                <span asp-validation-for="CompanyObj.PostalCode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mt-1">
            <div class="col-3">
                <label asp-for="CompanyObj.State" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="CompanyObj.State" class="form-control" placeholder="Enter the state..." />
                <span asp-validation-for="CompanyObj.State" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mt-4">
            <div class="col-9 offset-3">
                <div class="row">
                    <div class="col-6">
                        @if (Model.CompanyObj.CompanyId != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">
                            <i class="fa fa-pencil-alt"></i>&nbsp;Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control" onclick="return validateInput()">
                                <i class="fa fa-user-plus"></i>&nbsp;Create
                            </button>
                        }
                        @*<button type="submit" class="btn btn-primary form-control">
                                @(Model.MenuItemVM.MenuItem.Id != 0 ? "Update" : "Create")
                            </button>*@
                    </div>
                    <div class="col-6">
                        <a asp-page="list" class="btn btn-success form-control">
                        <i class="fa fa-list-alt"></i>&nbsp;Back To List</a>
                    </div>
                </div>
            </div>
        </div>
        
    </form>


</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}